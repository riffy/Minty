<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Minty.Pages.Debug.ViewModels"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Minty.Pages.Debug.Views.DebugDialogsPage"
	x:DataType="vm:DebugDialogsPageViewModel">
	<StackPanel>
		<StackPanel Orientation="Vertical" Spacing="4">
			<Button Content="Show Info Dialog" Command="{Binding ShowInfoDialogTestCommand}" />
			<Button Content="Show Warning Dialog" Command="{Binding ShowWarningDialogTestCommand}" />
			<Button Content="Show Success Dialog" Command="{Binding ShowSuccessDialogTestCommand}" />
			<Button Content="Show Error Dialog" Command="{Binding ShowErrorDialogTestCommand}" />
			<Button Content="Show Exception Dialog (with report)" Command="{Binding ShowExceptionDialogTestCommand}" />
		</StackPanel>
	</StackPanel>
</UserControl>

