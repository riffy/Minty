<Application
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Minty.App"
	xmlns:local="using:Minty"
	RequestedThemeVariant="Default"
	xmlns:style="using:FluentAvalonia.Styling">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
	    <style:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
    </Application.Styles>

    <Application.Resources>
	    <ResourceDictionary>
		    <ResourceDictionary.MergedDictionaries>
			    <MergeResourceInclude Source="/Styles/BaseColorPalette.axaml" />
			    <MergeResourceInclude Source="/Styles/Button.axaml" />
			    <MergeResourceInclude Source="/Styles/Checkbox.axaml" />
		    </ResourceDictionary.MergedDictionaries>
	    </ResourceDictionary>
    </Application.Resources>
</Application>
