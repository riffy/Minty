<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Minty.Components">
	<Design.PreviewWith>
		<StackPanel Spacing="10">
			<controls:Heading Text="Heading 1" Level="1" />
			<controls:Heading Text="Heading 2" Level="2" />
			<controls:Heading Text="Heading 3" Level="3" />
		</StackPanel>
	</Design.PreviewWith>

	<Style Selector="controls|Heading">
		<Setter Property="Template">
			<ControlTemplate>
				<TextBlock
					Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}"
					FontWeight="SemiBold" />
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Level-specific font sizes -->
	<Style Selector="controls|Heading[Level=1]">
		<Setter Property="FontSize" Value="32" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<Style Selector="controls|Heading[Level=2]">
		<Setter Property="FontSize" Value="28" />
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<Style Selector="controls|Heading[Level=3]">
		<Setter Property="FontSize" Value="24" />
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>

	<Style Selector="controls|Heading[Level=4]">
		<Setter Property="FontSize" Value="20" />
		<Setter Property="FontWeight" Value="SemiBold" />
	</Style>

	<Style Selector="controls|Heading[Level=5]">
		<Setter Property="FontSize" Value="18" />
		<Setter Property="FontWeight" Value="Medium" />
	</Style>

	<Style Selector="controls|Heading[Level=6]">
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Medium" />
	</Style>
</Styles>
