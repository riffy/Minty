<UserControl
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	x:DataType="viewModels:ExceptionDialogViewModel"
	xmlns:ui="using:FluentAvalonia.UI.Controls"
	xmlns:viewModels="clr-namespace:Minty.Dialogs.ViewModels"
	mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
	x:Class="Minty.Dialogs.Views.ExceptionDialog">
	<StackPanel
		Spacing="8"
		Orientation="Vertical">
		<ui:InfoBar
			Severity="Error"
			IsOpen="True"
			IsClosable="False"
			Message="{Binding Message}"/>
		<Expander
			Header="Exception Details"
			IsExpanded="False">
			<ScrollViewer
				MaxHeight="300">
				<SelectableTextBlock
					Text="{Binding ExceptionDetails}"
					FontSize="12"
					TextWrapping="Wrap"
					Padding="8"
					Foreground="#f5f5f5"
					Background="#101010"/>
			</ScrollViewer>
		</Expander>
	</StackPanel>
</UserControl>

